<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customizable Gift Box</title>
    <link rel="stylesheet" href="/styles/styles.css">
    <link rel="stylesheet" href="/styles/body.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
</head>
<body>

  <!-- Header Section -->
<header class="depop-like-header">
    <div class="header-left">
        <div class="logo">
            <a href="/index">hello</a>
        </div>
    </div>
    <div class="header-middle">
        <div class="search-bar">
            <input type="text" placeholder="Search for items">
            <button><i class="fas fa-search"></i></button>
        </div>
    </div>
    <div class="header-right">
        <a href="#"><i class="far fa-heart"></i></a>
        <a href="#"><i class="fas fa-shopping-bag"></i></a>
        
        <% if (isLoggedIn) { %>
            <% if (isSeller) { %>
                <!-- Seller is logged in -->
                <a href="/ListanItem" class="sell-now">Sell Now</a>
            <% } else { %>
                <!-- User is logged in but not a seller -->
                <a href="/becomeSeller" class="sell-now">Become a Seller</a>
            <% } %>
            <a href="/customerDash"><i class="fas fa-user-circle"></i> Profile</a>
            <a href="/logout">Logout</a>
        <% } else { %>
            <!-- User is not logged in -->
            <a href="/user">Sign up</a>
            <a href="/signin">Log in</a>
        <% } %>
        </div>
    </div>
</header>

    <!-- Hero Section -->
    <section class="hero">
        <div class="hero-text">
            <h1>Inspired by Tradition, Designed for You!</h1>
            
            <a href="/chooseSeller" class="btn" id="customizeBtn">Customize Now</a>

        </div>
    </section>

    <!-- Best Selling Gifts Section -->
    <section class="best-selling">
        <h2>Best Selling Gifts</h2>
        <div class="product-container">
            <% items.forEach(item => { %>
             <div class="product-card">
                <img src="/uploads/<%= item.photo1 %>" alt="<%= item.description %>">
                <h3><%= item.description %></h3>
                <p>RS <%= item.price.toFixed(2) %></p>
                <button class="btn">Buy Now</button>
             </div>
            <% }) %>
        </div>
          
    </section>

    <!-- About Us Section -->
    <section class="about-us">
        <h2>About Us</h2>
        <div class="about-container">
            <div class="about-item">
                <i class="fas fa-box"></i>
                <h3>Fully Customizable</h3>
                <p>Design your own gift box.</p>
            </div>
            <div class="about-item">
                <i class="fas fa-globe"></i>
                <h3>Sri Lankan Inspired</h3>
                <p>Handcrafted gifts with cultural significance.</p>
            </div>
            <div class="about-item">
                <i class="fas fa-headset"></i>
                <h3>24/7 Support</h3>
                <p>Our team is always here to help.</p>
            </div>
        </div>
    </section>

    <!-- Footer Section -->
    <footer>
        <div class="footer-logo"> <img src="/image/giftboxLogo.png" alt="Brand Logo"> </div>
        <div class="social-media">
            <i class="fab fa-facebook"></i>
            <i class="fab fa-instagram"></i>
            <i class="fab fa-twitter"></i>
        </div>
        <p>&copy; 2025 Customizable Gift Box. All Rights Reserved.</p>
    </footer>

    <script src="/script/Index.js"></script>

</body>
</html>
