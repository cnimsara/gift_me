<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customizable Gift Box</title>
    <link rel="stylesheet" href="/styles/viewGiftbox.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
</head>
<body>

  <!-- Header Section -->
<header class="depop-like-header">
    <div class="header-left">
        <div class="logo">
            <a href="/index">Giftly</a>
        </div>
    </div>
    <div class="header-middle">
        <div class="search-bar">
            <input type="text" placeholder="Search for items">
            <button><i class="fas fa-search"></i></button>
        </div>
    </div>
    <div class="header-right">
        <a href="#"><i class="far fa-heart"></i></a>
        <a href="#"><i class="fas fa-shopping-bag"></i></a>
        
        <% if (isLoggedIn) { %>
            <% if (isSeller) { %>
                <!-- Seller is logged in -->
                <a href="/ListanItem" class="sell-now">Sell Now</a>
            <% } else { %>
                <!-- User is logged in but not a seller -->
                <a href="/becomeSeller" class="sell-now">Become a Seller</a>
            <% } %>
            <a href="/customerDash"><i class="fas fa-user-circle"></i> Profile</a>
            <a href="/logout">Logout</a>
        <% } else { %>
            <!-- User is not logged in -->
            <a href="/user">Sign up</a>
            <a href="/signin">Log in</a>
        <% } %>
        </div>
    </div>
</header>


<!-- main -->
 
  <!-- Main Section -->
  <main class="giftbox-details">
    <h2>Your Custom Gift Basket</h2>

    <h3>Gift Box: <%= giftBox.brand %> - Rs. <%= giftBox.price %></h3>
    <h3>Wrapping: <%= giftWrap.brand %> - Rs. <%= giftWrap.price %></h3>

    <h3>Items in the Gift Box</h3>
      <div class="item-list">
        <% items.forEach(item => { %>
            <div class="item">
              <p><%= item.brand %> - $<%= item.price %></p>
              <p>Sold by: <%= item.shop_name %></p>
              
            </div>
          <% }); %>
      </div>

    <h3>Total Price: Rs. <%= total %></h3>

    <div>
        <a href="/checkout/<%= giftBox.id %>" class="btn checkout">Proceed to Checkout</a>
        <a href="/index" class="btn home">Back to Home</a>
    </div>
  </main>
    <!-- Footer Section -->
    <footer>
        <div class="footer-logo"> <img src="/image/giftboxLogo.png" alt="Brand Logo"> </div>
        <div class="social-media">
            <i class="fab fa-facebook"></i>
            <i class="fab fa-instagram"></i>
            <i class="fab fa-twitter"></i>
        </div>
        <p>&copy; 2025 Customizable Gift Box. All Rights Reserved.</p>
    </footer>

    <script src="/script/chooseSeller.js"></script>

</body>
</html>

